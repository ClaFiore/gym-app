<h1>Member Details Page</h1>

<h3>Name: <%= @member.name %></h3>
<h3>Age: <%= @member.age %></h3>
<h3>Workout: </h3>
<div>
    <ul>
        <% @member.workouts.each do |w| %>
            <li><%=link_to w.name, workout_path(w) %></li>
        <%end%>
    </ul>
</div>



<h3>Trainers: </h3>
<div>
    <ul> 
        <% @member.trainers.each do |t| %>
            <li><%= link_to t.name, trainer_path(t) %></li>
        <% end %>
    </ul>
</div>

<br><%= button_to "Edit Member", edit_member_path, method: :get%><br>
<br><%= button_to "Delete Member", member_path(@member), method: :delete, data: {confirm: "Are you sure you want to delete this?"}%><br>
<%= button_to "Return to Homepage", home_path, method: :get%>